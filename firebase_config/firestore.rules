// Firestore Security Rules — Timeless (optimisé pour démo)
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // -------- PROFIL UTILISATEUR ----------
    match /Auth/User/register/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // -------- CANDIDATURES / APPLY --------
    match /Apply/{uid} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // -------- OFFRES D'EMPLOI / JOBS ----
    // Lecture ouverte pour la démo, écriture réservée aux admins
    match /jobs/{jobId} {
      allow read: if true; // Tout le monde peut voir les offres
      allow write: if request.auth != null; // Seuls les utilisateurs connectés peuvent écrire
    }

    // -------- ACCÈS TEMPORAIRE POUR DÉMO --------
    // Cette règle permet un accès plus large pendant la démo
    // À REMPLACER APRÈS LA DÉMO par des règles plus restrictives
    match /{document=**} {
      allow read: if true; // Lecture ouverte pour tous les documents
      allow write: if request.auth != null; // Écriture pour utilisateurs connectés
    }
  }
}